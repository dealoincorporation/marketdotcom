// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  ON_DELIVERY
  DELIVERED
  CANCELLED
}

enum DeliveryStatus {
  SCHEDULED
  IN_TRANSIT
  DELIVERED
}

model User {
  id            String   @id @default(cuid()) @map("_id")
  email         String   @unique
  password      String?
  name          String?
  phone         String?
  role          UserRole @default(CUSTOMER)
  emailVerified DateTime?
  image         String?

  // Password reset
  resetToken    String?
  resetTokenExpiry DateTime?

  // Email verification
  emailVerificationToken String?

  // Wallet system
  walletBalance Float    @default(0)

  // Points system
  points        Int      @default(0)

  // Referral system
  referralCode  String   @unique @default(cuid())
  referredById  String?
  referredBy    User?    @relation("UserReferrals", fields: [referredById], references: [id], onDelete: NoAction, onUpdate: NoAction)

  // Relationships
  cart          Cart[]
  orders        Order[]
  deliveries    Delivery[]
  addresses     Address[]
  referrals     User[]   @relation("UserReferrals")
  referredReferrals Referral[] @relation("ReferrerReferrals")
  rewards       Reward[]
  notifications Notification[]
  walletTransactions WalletTransaction[]
  payments      Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String   @id @default(cuid()) @map("_id")
  name        String   @unique
  description String?
  image       String?
  products    Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String     @id @default(cuid()) @map("_id")
  name        String
  // Product family/group (e.g. "Rice") so multiple brand products can be grouped in filters
  groupName   String?
  description String?
  image       String?
  basePrice   Float
  stock       Int        @default(0)
  unit        String     @default("piece")
  inStock     Boolean    @default(true)
  weightKg    Float?     // Weight in kg for base option label and delivery (e.g. 60)
  deliveryFee Float?     // Per-product delivery fee (null = use default calculation, 0 = free delivery)
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  // Variations
  variations  Variation[]

  // Cart and Orders
  cartItems   CartItem[]
  orderItems  OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Variation {
  id        String   @id @default(cuid()) @map("_id")
  name      String   // e.g., "Mama Gold", "Caprice", "1 Cup", "2 Cups"
  type      String   // e.g., "Brand", "Size", "Quantity", "Weight"
  price     Float    @default(0)
  stock     Int      @default(0)
  unit      String?  // e.g., "cup", "kg", "pcs", "pack"
  quantity  Float?   // e.g., 1, 2, 0.5, 5 (for measurements)
  weightKg  Float?   // Weight in kg for this variation (delivery fee calculation); overrides product weightKg when set
  image     String?  // Image URL for this variation
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Cart and Orders
  cartItems CartItem[]
  orderItems OrderItem[]

  @@unique([productId, name]) // Ensure unique combination of productId and name

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cart {
  id     String     @id @default(cuid()) @map("_id")
  userId String
  user   User       @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  items  CartItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartItem {
  id          String    @id @default(cuid()) @map("_id")
  cartId      String
  cart        Cart      @relation(fields: [cartId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  variationId String?
  variation   Variation? @relation(fields: [variationId], references: [id])
  quantity    Int       @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id              String      @id @default(cuid()) @map("_id")
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  status          OrderStatus @default(PENDING)
  totalAmount     Float
  deliveryFee     Float       @default(0)
  taxAmount       Float       @default(0)
  discountAmount  Float       @default(0)
  finalAmount     Float

  // Payment info
  paymentMethod   String?
  paymentStatus   String      @default("PENDING")
  transactionId   String?

  // Relationships
  items           OrderItem[]
  delivery        Delivery?
  rewards         Reward[]
  notifications   Notification[]
  payments        Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id          String   @id @default(cuid()) @map("_id")
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  variationId String?
  variation   Variation? @relation(fields: [variationId], references: [id])
  name        String?   // Display name at order time for cart/export (e.g. "Product - Half Carton (5 bags)")
  quantity    Int
  unitPrice   Float
  totalPrice  Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Delivery {
  id              String         @id @default(cuid()) @map("_id")
  orderId         String         @unique
  order           Order          @relation(fields: [orderId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  userId          String
  user            User           @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  // Delivery details
  address         String
  city            String
  state           String
  postalCode      String?
  phone           String
  deliveryNotes   String?

  // Scheduling
  scheduledDate   DateTime
  scheduledTime   String         // e.g., "10:00 AM - 2:00 PM"
  status          DeliveryStatus @default(SCHEDULED)

  // Tracking
  trackingNumber  String?        @unique
  deliveredAt     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Referral {
  id            String   @id @default(cuid()) @map("_id")
  referrerId    String
  referrer      User     @relation("ReferrerReferrals", fields: [referrerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  referredEmail String
  code          String
  rewardAmount  Float    @default(0)
  isUsed        Boolean  @default(false)
  usedAt        DateTime?
  // When set, both referrer and referee have received their ₦500 bonus (after referee's first purchase)
  firstPurchaseBonusPaidAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reward {
  id          String   @id @default(cuid()) @map("_id")
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  points      Int      @default(0)
  description String
  type        String   // e.g., "PURCHASE", "REFERRAL", "BONUS"
  orderId     String?
  order       Order?   @relation(fields: [orderId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReferralSettings {
  id                String   @id @default(cuid()) @map("_id")
  referrerReward    String   @default("100") // Amount or description referrer gets (can be number like "₦100" or text like "Refer a friend and earn rewards!")
  refereeReward     String   @default("50")  // Amount or description new user gets (can be number like "₦50" or text like "Get a bonus on your first purchase!")
  isActive          Boolean  @default(true)
  description       String?
  validUntil        DateTime?
  // Points-based referral rewards (admin-configurable)
  referrerPointsOnSignup       Int @default(0)   // Points referrer gets when someone signs up with their code
  referrerPointsPerPurchase    Int @default(0)  // Points referrer gets each time a referred customer completes a purchase

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PointsSettings {
  id                     String   @id @default(cuid()) @map("_id")
  amountThreshold         Int      @default(50000) // Every ₦X spent in the period = one "block"
  periodDays             Int      @default(30)    // Patronage period: amount purchased in last X days
  pointsPerThreshold      Int      @default(1)    // Points per block (e.g. 1 or 10)
  pointsPerNaira          Float    @default(0.01) // Legacy: points per ₦1 (optional)
  nairaPerPoint           Float    @default(10)   // ₦ value per point when converting
  minimumPointsToConvert  Int      @default(100)  // Minimum points needed to convert
  conversionCooldownDays  Int      @default(30)   // Days between conversions
  isActive                Boolean  @default(true)
  description             String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  title     String
  message   String
  type      String   // e.g., "ORDER", "DELIVERY", "PROMOTION"
  isRead    Boolean  @default(false)
  orderId   String?
  order     Order?   @relation(fields: [orderId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
}

model WalletTransaction {
  id          String            @id @default(cuid()) @map("_id")
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        TransactionType
  amount      Float
  method      String // card, bank, mobile, etc.
  description String
  status      TransactionStatus @default(PENDING)
  reference   String            @unique
  orderId     String? // For purchases

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id            String   @id @default(cuid()) @map("_id")
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          String   // "home", "work", "other"
  name          String   // e.g., "Home", "Office"
  address       String   // Full street address
  city          String
  state         String
  postalCode    String?
  phone         String
  isDefault     Boolean  @default(false)
  isVerified    Boolean  @default(false)
  coordinates   String?  // JSON string for lat/lng
  deliveryNotes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name]) // Prevent duplicate address names per user
}

model Payment {
  id              String   @id @default(cuid()) @map("_id")
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount          Float
  currency        String   @default("NGN")
  method          String   // PAYSTACK, STRIPE, etc.
  status          String   // PENDING, COMPLETED, FAILED, REFUNDED
  transactionId   String   @unique
  gatewayResponse Json?    // Store the full gateway response

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Store checkout payload until Paystack payment succeeds; order is created only after payment.
model PendingCheckout {
  id         String   @id @default(cuid()) @map("_id")
  reference  String   @unique
  userId     String
  amount     Float
  orderData  Json     // Same shape as body for POST /api/orders/create
  createdAt  DateTime @default(now())
}

model Subscription {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  isActive  Boolean  @default(true)
  source    String   @default("FOOTER") // FOOTER, ABOUT_PAGE, etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DeliverySlot {
  id          String   @id @default(cuid()) @map("_id")
  date        DateTime
  timeSlot    String   // e.g., "10:00 AM - 2:00 PM"
  isAvailable Boolean  @default(true)
  maxOrders   Int      @default(10) // Maximum orders for this slot
  currentOrders Int    @default(0) // Current number of orders scheduled
  price       Float?   // Additional delivery fee for this slot
  description String?  // Optional description

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, timeSlot]) // Prevent duplicate slots for same date/time
}

// Global delivery & MOQ settings (admin-editable, single row)
model DeliverySettings {
  id                    String   @id @default(cuid()) @map("_id")
  baseFee               Float    @default(500)   // Base delivery fee (₦) - used as fallback
  feePerKg              Float    @default(50)   // Fee per kg of order weight (₦) - legacy fallback
  feeTier1              Float    @default(2000)  // Delivery fee for 1–50 kg (₦)
  feeTier2              Float    @default(3500)  // Delivery fee for 51–100 kg (₦)
  feeTier3              Float    @default(5000)  // Delivery fee for 100+ kg (₦)
  minimumOrderQuantity  Int      @default(1)    // MOQ: minimum items to checkout
  minimumOrderAmount    Float    @default(0)    // MOQ: minimum order subtotal (₦); 0 = no minimum
  deliveryInfoPoints    String?  // JSON array of strings: bullet points shown in checkout "Delivery Information"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
