  "name": "marketdotcom",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=4096 next dev",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=4096 next build",
    "build:offline": "NODE_OPTIONS=--max-old-space-size=4096 SKIP_ENV_LOADING=true DATABASE_URL=mongodb://localhost:27017/marketdotcom NEXTAUTH_URL=http://localhost:3000 NEXTAUTH_SECRET=fallback-secret NEXT_PUBLIC_APP_URL=http://localhost:3000 JWT_SECRET=fallback-jwt NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_9071bb582b6486e980b86bce551587236426329a next build --no-lint",
    "build:safe": "NODE_OPTIONS='--max-old-space-size=4096 --no-deprecation' DATABASE_URL=mongodb://localhost:27017/marketdotcom NEXTAUTH_URL=http://localhost:3000 NEXTAUTH_SECRET=fallback-secret NEXT_PUBLIC_APP_URL=http://localhost:3000 JWT_SECRET=fallback-jwt NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_9071bb582b6486e980b86bce551587236426329a next build --no-lint",
    "download-fonts": "node download-fonts.js",
    "start": "next start",
    "lint": "eslint",
    "db:seed": "tsx prisma/seed.ts",
    "db:generate": "node -e \"require('dotenv').config({path:'.env.local'}); const {spawnSync}=require('child_process'); const r=spawnSync('npx',['prisma','generate'],{stdio:'inherit',env:process.env}); process.exit(r.status||0)\"",
    "db:push": "node -e \"require('dotenv').config({path:'.env.local'}); const {spawnSync}=require('child_process'); const r=spawnSync('npx',['prisma','db','push'],{stdio:'inherit',env:process.env}); process.exit(r.status||0)\"",
    "verify-wallet": "node verify-pending-wallet-transactions.js",
    "verify-wallet-setup": "node verify-wallet-setup.js",
    "netlify-build": "npm run build:offline",
    "postinstall": "DATABASE_URL=${DATABASE_URL:-'mongodb://localhost:27017/marketdotcom'} prisma generate || echo 'Prisma generate skipped'"
  },
